{
  "name": "ft-pong-client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A lime-themed Pong game built with TypeScript and Tailwind CSS",
  "keywords": [
    "pong",
    "game",
    "typescript",
    "tailwind",
    "lime-theme"
  ],
  "author": "FT_PONG Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite --config ./Conf/vite.config.ts",
    "build": "vite build --config ./Conf/vite.config.ts",
    "build:with-typecheck": "tsc --project ./Conf/tsconfig.build.json && vite build --config ./Conf/vite.config.ts",
    "build:strict": "tsc --project ./Conf/tsconfig.json && vite build --config ./Conf/vite.config.ts",
    "preview": "vite preview --config ./Conf/vite.config.ts",
    "type-check": "tsc --noEmit --project ./Conf/tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/three": "^0.179.0",
    "autoprefixer": "^10.x",
    "postcss": "^8.x",
    "tailwindcss": "^3.x",
    "typescript": "^5.3.2",
    "vite": "^5.4.20"
  },
  "dependencies": {
    "@babylonjs/core": "^8.23.1",
    "@babylonjs/loaders": "^8.22.0",
    "three": "^0.179.1"
  }
}
