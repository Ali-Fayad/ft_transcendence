{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping for new structure */
    "baseUrl": "../src",
    "paths": {
      "@/*": ["./*"],
      "@": ["./index.ts"],
      "@/components": ["./components/index.ts"],
      "@/components/*": ["./components/*"],
      "@/services": ["./services/index.ts"],
      "@/services/*": ["./services/*"],
      "@/utils": ["./utils/index.ts"],
      "@/utils/*": ["./utils/*"],
      "@/types": ["./types/index.ts"],
      "@/types/*": ["./types/*"],
      "@/game": ["./game/index.ts"],
      "@/game/*": ["./game/*"],
      "@/styles/*": ["./styles/*"],
      "@/assets/*": ["./assets/*"],
      "@/langs": ["./langs/index.ts"],
      "@/langs/*": ["./langs/*"],
      "@/auth": ["./auth/index.ts"],
      "@/auth/*": ["./auth/*"],
      "@/menu": ["./menu/index.ts"],
      "@/menu/*": ["./menu/*"],
      "@/ui": ["./ui.ts"]
    }
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.d.ts",
    "../src/**/*.vue"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../Server"
  ]
}
